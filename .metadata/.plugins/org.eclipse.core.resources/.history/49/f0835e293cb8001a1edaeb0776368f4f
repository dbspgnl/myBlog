    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="js/jquery.bxslider.js"></script>
  <script>
    $(function() {
      $('.bxslider').bxSlider({
        auto:true,
        autoHover: true,
        captions:true,
      });
    });
	$(function(){
	  var $menu = $('.nav-item');
	  var $contents = $('body > div');
	  $menu.click(function(x){
		x.preventDefault();
		$(this).addClass('active').siblings().removeClass('active');
		var idx = $(this).index()+1;
		var section = $contents.eq(idx);
		var sectionDistance = section.offset().top;
		// 선택자.scrollTop() 스크롤양 확인
		// 선택자.stop().animate({속성:값}) 하던일을 멈추고 애니메이션 적용
		$('html').stop().animate({scrollTop:sectionDistance});
	  });
	  var $logo = $('.navbar-brand');
	  $logo.click(function(x){
	    x.preventDefault();
	    $('html').stop().animate({scrollTop:0});
	  });
	  //profile button
	  $('#profileBtn').click(function(x){
		  x.preventDefault();
		  $('html').stop().animate({scrollTop:943.3});
	  });
	  //dropdown-menu list button
	  $('#menu-reminder').click(function(x){
		  location.href='list';
	  });
	  
	});
  </script>
